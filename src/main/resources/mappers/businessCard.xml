<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd">

<mapper namespace="com.infosiatec.mapper.BusinessCardMapper">
	<insert id="insertBusinessCard" parameterType="string">
		INSERT INTO businesscard (id, fileName)
		VALUES ( #{id}, #{fileName} )
	</insert>
	
	<select id="selectFileName" parameterType="com.infosiatec.domain.BusinessCardVO" resultType="string">
		SELECT fileName
		FROM businesscard
		WHERE id = #{id} AND idx = #{idx}
	</select>
	
	<select id="selectBusinessCardList" parameterType="string" resultType="com.infosiatec.domain.BusinessCardVO">
		SELECT *
		FROM businesscard
		WHERE id = #{id}
	</select>
	
	<select id="selectMaxIdx" resultType="Integer">
		SELECT MAX(idx)
		FROM businesscard
	</select>
</mapper>